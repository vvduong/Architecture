@model IEnumerable<Architecture.Application.Menus.Queries.GetMenuList.MenusListItemModel>

@{
    ViewBag.Title = "Menus";
    Layout = "~/Shared/Views/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
    <h1 class="mt-4"></h1>
    @*<ol class="breadcrumb mb-4">
            <li class="breadcrumb-item"><a href="index.html">Admin</a></li>
            <li class="breadcrumb-item active">Menus</li>
        </ol>*@

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Danh sách menu
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered admin-menus-table" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên</th>
                            <th>Icon</th>
                            <th>Link</th>
                            <th>Thứ tự</th>
                            <th>Loại</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Tên</th>
                            <th>Icon</th>
                            <th>Link</th>
                            <th>Thứ tự</th>
                            <th>Loại</th>
                            <th>Sửa</th>
                            <th>Xóa</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var menu in Model)
                        {
                            <tr>
                                <td>@menu.Name</td>
                                <td>@menu.Icon</td>
                                <td>@menu.Url</td>
                                <td>@menu.NoOrder</td>
                                <td>@menu.MenuType</td>
                                <td>
                                    <a data-id="@menu.Id" class="btn btn-circle btn-icon-only yellow admin-menu-edit-button">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                </td>
                                <td>
                                    <a data-id="@menu.Id" class="btn btn-circle btn-icon-only red admin-menu-delete-button">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div id="admin-menus-dynamic-content"></div>

@section Scripts {
    <script type="text/javascript">
        $.getScript('/Content/scripts/project.admin.js').done(function () {
            Vpa_Project.Injector.resolveDependency(Vpa_Project_Admin.Menus).init();
        });
    </script>
}
